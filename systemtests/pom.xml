<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0">
    <parent>
        <groupId>io.enmasse</groupId>
        <artifactId>enmasse</artifactId>
        <version>0.28.2-rc1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>systemtests</artifactId>
    <properties>
        <groups></groups>
        <excludeGroups></excludeGroups>
        <skip.tests>true</skip.tests>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-admin-client</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-jackson2-provider</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>io.fabric8</groupId>
            <artifactId>openshift-client</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.fabric8</groupId>
            <artifactId>kubernetes-model</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.vertx</groupId>
            <artifactId>vertx-proton</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>io.vertx</groupId>
            <artifactId>vertx-web-client</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.eclipse.paho</groupId>
            <artifactId>org.eclipse.paho.client.mqttv3</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.qpid</groupId>
            <artifactId>proton-j</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.qpid</groupId>
            <artifactId>qpid-jms-client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-runner</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-launcher</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
        </dependency>
        <dependency>
            <groupId>com.paulhammant</groupId>
            <artifactId>ngwebdriver</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>
        <dependency>
            <groupId>io.enmasse</groupId>
            <artifactId>api-model</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <groups>${groups}</groups>
                    <excludedGroups>${excludeGroups}</excludedGroups>
                    <skipTests>${skip.tests}</skipTests>
                    <systemProperties>
                        <enmasse.version>${release.version}</enmasse.version>
                    </systemProperties>
                    <includes>
                        <include>io.enmasse.systemtest.**</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.owasp</groupId>
                <artifactId>dependency-check-maven</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <configuration>
                    <skipAddThirdParty>true</skipAddThirdParty>
                    <skipDownloadLicenses>true</skipDownloadLicenses>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>systemtests</id>
            <properties>
                <skip.tests>false</skip.tests>
                <groups>shared-standard | shared-brokered | isolated | marathon | shared-iot</groups>
            </properties>
        </profile>
        <profile>
            <id>shared-brokered-pr</id>
            <properties>
                <skip.tests>false</skip.tests>
                <groups>shared-brokered &amp; !nonPR &amp; !smoke &amp; !marathon</groups>
            </properties>
        </profile>
        <profile>
            <id>shared-standard-pr</id>
            <properties>
                <skip.tests>false</skip.tests>
                <groups>shared-standard &amp; !nonPR &amp; !smoke &amp; !marathon</groups>
            </properties>
        </profile>
        <profile>
            <id>isolated-pr</id>
            <properties>
                <skip.tests>false</skip.tests>
                <groups>isolated &amp; !nonPR &amp; !smoke &amp; !marathon</groups>
            </properties>
        </profile>
        <profile>
            <id>isolated</id>
            <properties>
                <groups>isolated &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>shared-brokered</id>
            <properties>
                <groups>shared-brokered &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>shared-standard</id>
            <properties>
                <groups>shared-standard &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>shared-iot</id>
            <properties>
                <groups>shared-iot &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>smoke-iot</id>
            <properties>
                <groups>shared-iot &amp; smoke &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>marathon</id>
            <properties>
                <groups>marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>smoke</id>
            <properties>
                <groups>smoke &amp; !shared-iot &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>upgrade</id>
            <properties>
                <groups>upgrade &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>shared-standard-release</id>
            <properties>
                <groups>shared-standard &amp; !noneAuth &amp; !smoke &amp; !marathon &amp; !shared-iot</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>shared-brokered-release</id>
            <properties>
                <groups>shared-brokered &amp; !noneAuth &amp; !smoke &amp; !marathon &amp; !shared-iot</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>isolated-release</id>
            <properties>
                <groups>isolated &amp; !noneAuth &amp; !smoke &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
        <profile>
            <id>iot-release</id>
            <properties>
                <groups>shared-iot &amp; !noneAuth &amp; !smoke &amp; !marathon</groups>
                <skip.tests>false</skip.tests>
            </properties>
        </profile>
    </profiles>
</project>
